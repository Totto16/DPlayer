{
    "include": ["src/ts/**/*"],
    "exclude": ["node_modules", "src/js/*"],
    "compilerOptions": {
        "target": "es2021",
        "module": "es2022",
        "moduleResolution": "node",
        "lib": ["es2021", "dom"],
        "allowJs": true,
        "outDir": "src/build",
        "rootDir": "src/ts",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "declaration": true
    },
    "rules": {
        "triple-equals": true,
        "curly": true,
        "strict-boolean-expressions": true,
        "no-unnecessary-condition": true
    },
    "typeRoots": ["src/ts/global.d.ts", "node_modules/@types", "src/ts/*.d.ts"]
}
